---
import OpeningOverview from './OpeningOverview';


export interface OpeningItem {
	id?: string;
	title: string;
	author: string;
	href: string;
    src: string;
    opening: string;
}

export interface Props {
	items: Array<OpeningItem>;
}

const { items } = Astro.props as Props;
---

<ul role="list" class="flex flex-col gap-4">
    {items.map(item => (
        <OpeningOverview
            title={item.title}
            author={item.author}
            href={`/mangas/${item.id}`}
            src={item.src}
        />
    ))}
</ul>