---
export interface MangasItem {
	id?: string;
	title: string;
	author: string;
	src: string;
	href: string;
}

const { src, title, author, href, id } = Astro.props as MangasItem;
---

<div class="flex flex-col">
	<a class="group" href={`mangas/${id}`}>
		<img src={src} alt="Mangas image" class="aspect-1/3] rounded-lg shadow" />
		<p class="font-bold mt-4 group-hover:text-orange-500">{title}</p>
		<p class="text-sm text-slate-500">By {author}</p>
	</a>
</div>
